      <tr>
        <td WIDTH="29%" VALIGN="TOP" ROWSPAN="3" align="left"><font size="2">Инерционное<br>
        сопротивление</font></td>
        <td WIDTH="25%" VALIGN="TOP" align="center"><small><font size="2">-0,694</font></small></td>
        <td WIDTH="24%" VALIGN="TOP" align="center"><small><font size="2">-0,821</font></small></td>
        <td WIDTH="21%" VALIGN="TOP" align="center"><small><font size="2">0,765</font></small></td>
