        <td align="center"><font size="2">10±0,37</font></td>
        <td align="center"><font size="2">15±0,36</font></td>
        <td align="center"><font size="2">19±0,28</font></td>
        <td align="center"><font size="2">10±0,37</font></td>
        <td align="center"><font size="2">15±0,36</font></td>
