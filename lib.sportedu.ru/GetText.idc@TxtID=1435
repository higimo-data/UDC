        <td WIDTH="20%" VALIGN="TOP" align="center"><p ALIGN="CENTER"><font size="2">119,4<u>+</u>11,4*</font></td>
        <td WIDTH="20%" VALIGN="TOP" align="center"><p ALIGN="CENTER"><font size="2">110,7<u>+</u>11,4*</font></td>
