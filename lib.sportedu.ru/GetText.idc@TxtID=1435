        <td WIDTH="16%" VALIGN="TOP" align="center"><p ALIGN="CENTER"><font size="2">120,4<u>+</u>2,56</font></td>
        <td WIDTH="16%" VALIGN="TOP" align="center"><p ALIGN="CENTER"><font size="2">116,7<u>+</u>2,36</font></td>
