        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">3.00</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">2.67</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">2.78</font></td>
