      <tr>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">46</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">50</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">54</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">59</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">64</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">70</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">76</font></td>
