        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">0,9</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">9,7</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">6,8</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">7,0</font></td>
