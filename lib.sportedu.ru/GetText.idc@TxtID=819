        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">36,2</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">35,1</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">14,0</font></td>
        <td VALIGN="top" align="center"><p ALIGN="CENTER"><font size="2">14,0</font></td>
