        <td WIDTH="25%" VALIGN="TOP" COLSPAN="2"><p ALIGN="CENTER"><font size="2">1-й
        уровень</font></td>
        <td WIDTH="24%" VALIGN="TOP" COLSPAN="2"><p ALIGN="CENTER"><font size="2">2-й
        уровень</font></td>
        <td WIDTH="24%" VALIGN="TOP" COLSPAN="2"><p ALIGN="CENTER"><font size="2">3-й
        уровень</font></td>
