        <td WIDTH="15%" VALIGN="TOP"><p ALIGN="CENTER"><font size="2">9</font></td>
        <td WIDTH="13%" VALIGN="TOP"><p ALIGN="CENTER"><font size="2">15</font></td>
        <td WIDTH="14%" VALIGN="TOP"><p ALIGN="CENTER"><font size="2">3</font></td>
